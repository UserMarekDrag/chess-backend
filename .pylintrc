[MASTER]
ignore=tests.py,urls.py,migrations

[MESSAGES CONTROL]
disable=missing-docstring,locally-disabled,no-else-return,no-member,too-few-public-methods,too-many-ancestors,too-many-instance-attributes,too-many-arguments,too-many-locals,unused-argument,line-too-long,invalid-name,duplicate-code

[BASIC]
good-names=i,j,k,e,qs,pk,id,_
bad-names=foo,bar,baz,toto,tutu,tata
no-docstring-rgx=__.*__

[DESIGN]
max-args=10
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-attributes=7
min-public-methods=0
max-public-methods=20

[FORMAT]
max-line-length=120

[TYPECHECK]
ignored-classes=SQLObject,WSGIRequest,FieldDoesNotExist,ObjectDoesNotExist
generated-members=objects,DoesNotExist,id,pk,_meta,get_absolute_url,delete,save,objects.*,migrations.*
ignored-modules=six.moves,http.cookies

[VARIABLES]
dummy-variables-rgx=_|dummy

[LOGGING]
logging-modules=logging

# Plugin `pylint-django`
load-plugins=pylint_django

[pylint_django]
ignored-modules=models.signals
